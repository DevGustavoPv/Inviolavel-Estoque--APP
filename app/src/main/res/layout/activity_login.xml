<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/inviolavel" />

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_inputs"
                android:layout_marginTop="32dp"
                android:hint="Email"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"/>



            <EditText
                android:id="@+id/loginSenha"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_inputs"
                android:layout_marginTop="18dp"
                android:hint="Senha"
                android:drawableStart="@drawable/ic_senha"
                android:drawablePadding="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_inputs"
                android:layout_marginTop="29dp"
                android:backgroundTint="#FFEB3B"
                android:text="Entrar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                tools:visibility="visible"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:text="Crie um conta para sua franquia" />


            <TextView
                android:id="@+id/textEsqueceu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Esqueceu a senha?"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>