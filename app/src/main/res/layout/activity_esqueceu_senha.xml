<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.EsqueceuSenha">


    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_padrao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Esqueceu a senha? não se preocupe, insira abaixo o email de cadastro e nós enviaremos instruções!" />

        <EditText
            android:id="@+id/editEmailEsqueceu"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_inputs"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="8dp"
            android:layout_marginTop="32dp"
            android:hint="Email"
            android:paddingStart="6dp"
            android:paddingEnd="6dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEsqueceu"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_inputs"
            android:backgroundTint="#FFEB3B"
            android:drawablePadding="8dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Enviar"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>